@model IEnumerable<WebApplication1.Models.Picture>

@{
    ViewBag.Title = "PicturesInPainters";
}

<div class="container-fluid">
    <div class="row">
        @foreach (var p in Model)
        {
        <div class="col-md-4">
            <h4>@p.title</h4>
            <p>
                <b>
                    Museum:
                </b>
                @p.museum
            </p>
            @if (p.canvas != null)
            {
                <img src="@Url.Action("GetImage","Pictures", new { p.id })" class="img-rounded img" />
            }
            <a href="@Url.Action("Details", "Pictures", new { id = p.id })" class="margint-2">@p.title</a>
        </div>
        }
    </div>
</div>