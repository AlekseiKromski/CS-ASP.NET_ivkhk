@model JPTVR18_phones.Models.Comment
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@if (Model.UserName == User.Identity.GetUserName() || User.Identity.GetUserName() == "admin")
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Comment</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Comments)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Comments)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DatePublish)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DatePublish)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phones.name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phones.name)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <p>
                <input type="submit" name="name" value="Delete" />
                @Html.ActionLink("Back to phone", "Details","Phones", new { id = Model.PhonesId}, null)
            </p>
        }
    </div>
}
else {
    <h2>У вас нет прав</h2>
    <h3>
        Phone title: "@Html.DisplayFor(model => model.Phones.name)"
    </h3>
    @Html.ActionLink("Back to phone", "Details", "Phones", new { id = Model.PhonesId}, null)
}
